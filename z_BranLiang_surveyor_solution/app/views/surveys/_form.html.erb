<%= form_for(survey) do |f| %>
  <div class="form-group">
    <h3><strong><i class="fa fa-pencil" aria-hidden="true"></i>  <%= f.label :title, "Survey Title" %></strong></h3>
    <%= f.text_field :title, class: "form-control text-center input-lg" %>
  </div>
  <div class="form-group">
    <h3><strong><i class="fa fa-pencil" aria-hidden="true"></i>  <%= f.label :description, "Survey Description" %></strong></h3>
    <%= f.text_area :description, class: "form-control text-center input-lg", rows: 3 %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Survey and Begin Adding Questions", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
