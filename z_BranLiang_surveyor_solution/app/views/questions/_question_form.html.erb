<h3><strong>Add a Multiple Choice Question:</strong></h3>
<div class="text-center">
  <h4><strong>1.Select Options</strong> | <span class="text-muted">2.Add Question Text</span></h4>
</div>

<hr>

<%= form_for @question do |f| %>
  <%= f.hidden_field :survey_id, value: @survey.id %>
  <div class="form-group">
    <h4><i class="fa fa-pencil-square-o" aria-hidden="true"></i> How many options for this question?</h4>
    <%= f.select :options, (1..6).map {|i| [i, i]}, {}, class: "form-control input-lg" %>
  </div>
  <div class="form-group">
    <h4><i class="fa fa-pencil-square-o" aria-hidden="true"></i> How many options can be selected?</h4>
    <label>
      <%= f.radio_button :multi_select, false %>
      Just One
    </label>
    <label>
      <%= f.radio_button :multi_select, true %>
      Multiple
    </label>
  </div>
  <div class="form-group">
    <h4><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Is the question required?</h4>
    <label>
      <%= f.radio_button :required, true %>
      Yes
    </label>
    <label>
      <%= f.radio_button :required, false %>
      No
    </label>
  </div>
  <div class="form-group">
    <%= f.submit "Continue to the Next Stop", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
